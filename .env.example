# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# DATABASE CONFIGURATION (MongoDB)
# ============================================
MONGODB_URI=mongodb://admin:admin123@localhost:27017/?authSource=admin
MONGODB_DB_NAME=bot-nutri

# ============================================
# WHATSAPP CONFIGURATION (Whapi)
# ============================================
# API configuration
WHAPI_API_URL=https://gate.whapi.cloud
WHAPI_API_TOKEN=your_whapi_api_token_here
WHAPI_CHANNEL_ID=your_whapi_channel_id_here

# Webhook configuration
WHAPI_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# ============================================
# TACO API CONFIGURATION
# ============================================
# Use local TACO API (set to "true" to enable)
USE_TACO_API=false
TACO_API_URL=http://localhost:8080

# ============================================
# AI/ML CONFIGURATION (Google Gemini)
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
# Set to 'production' in production environments
# production | development | staging

# ============================================
# NUTRITION DATA SOURCE CONFIGURATION
# ============================================
# Estratégia para obter dados nutricionais
# Opções: gemini | taco | usda | mongodb
# RECOMENDADO: gemini (mais barato e flexível)
NUTRITION_DATA_SOURCE=gemini

# Cache de nutrição (em segundos)
NUTRITION_CACHE_TTL=86400
NUTRITION_CACHE_MAX_ENTRIES=1000
